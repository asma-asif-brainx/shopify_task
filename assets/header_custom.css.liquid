header.header.header--middle-left.header--mobile-center.page-width.header--has-menu.header--has-account{
    display: flex;
    flex-direction: row;
     column-gap:0 !important;
}
.mobile-shop-btn {
  display: none;
}

.desktop-shop-btn {
  display: block;
}

.cart-icon-menu, .shop-now-menu{
  padding: 1.2rem;
}
.header-main-list{
  display:flex !important;
  flex-wrap: nowrap !important; 
  align-items: center !important;
  gap:5px;
}

.header-nav-list-items, .header-nav-span-items{
    font-size:16px !important;
}
.btn--shop-now{
  text-decoration:none;
}

 .header-nav-span-items{
   font-family:'Normal_Font';
 }
 .header-nav-list-items{
    font-family:'Bold_Font';
 }
.shop-now-menu{
    min-width: 88%;
    width: 100%;
    max-height: 93%;
    height: 100%;
    text-align:center;
    border-radius:6px;
}
.main-nav-header{
  width:auto;
}
.logo-heading-header{
  max-width:20%;
  width:100%;
  display: flex;
  justify-content: center;
  max-width: 25%;
  width: 100%;
}
.header-main-div{
  margin:0;
  max-width:100%;
  width:100%;
}
.header__icons .localization-link{
  display:none;
}
.header-logo-img{
  width:180px;
}
.header-icons-cart-button{
   display:flex !important;
   align-items: center !important;
  gap:45px;
}

.icons-nav-section{
  display: flex;
    flex-direction: row;
    align-items: center;
}
@media screen and (max-width:1024px){
  .header-nav-list-items, .header-nav-span-items {
    font-size: 14px !important;
 }
}
@media screen and (max-width:980px){
  .header-nav-list-items, .header-nav-span-items {
    font-size: 14px !important;
 }
 .mobile-shop-btn {
  display: block;
 }
  .desktop-shop-btn {
    display: none;
  }
  .header-icons-cart-button{
    position: relative;
    left: 100%;
  }
  header-drawer
{
    display: flex !important;
}
.header-main-div
{
      padding-top: 0  !important;
 padding-bottom: 0  !important;

}
.logo-heading-header{
  position: relative;
    left: 16%;
}
}
@media screen and (max-width:767px){

.drawer-custom-mob{
    display:flex !important;
  }
  .header-icons-cart-button {
      gap: 27px;
  }
  .shop-now-menu {
      min-width: 59%;
      width: 100%;
      max-height: 80%;
      height: 100%;
  }
  .header-main-div {
    justify-content:space-between;
  }
  .logo-icons-mobile-section{
    display:flex;
    flex-direction:row;
    align-items:center;
    justify-content: right;
    gap:40px;
  }
  .header-logo-img {
    min-width: 118px;
    width:100%;
  }

}
