header.header.header--middle-left.header--mobile-center.page-width.header--has-menu.header--has-account{
    display: flex;
    flex-direction: row;
     column-gap:0 !important;
}
.mobile-shop-btn {
  display: none;
}
.desktop-shop-btn {
  display: block;
}
.cart-icon-menu, .shop-now-menu{
  padding: 1.2rem;
}
.header-main-list{
  display:flex !important;
  flex-wrap: nowrap !important; 
  align-items: center !important;
  gap:5px;
}
.header-nav-list-items, .header-nav-span-items{
    font-size:14px !important;
}
.btn--shop-now{
  text-decoration:none;
}
 .header-nav-span-items{
   font-family:'Medium_Font';
 }
 .header-nav-list-items{
    font-family:'Bold_Font';
 }
.shop-now-menu{
    min-width: 88%;
    width: 100%;
    max-height: 93%;
    height: 100%;
    text-align:center;
    border-radius:6px;
}
.main-nav-header{
  width:auto;
}
.logo-heading-header{
  display: flex;
  justify-content: center;
  max-width: 20%;
  width: 100%;
}
.header-main-div{
  margin:0;
  max-width:100%;
  width:100%;
  padding-top: 5px !important;
  padding-bottom: 5px !important;
}
.header__icons .localization-link{
  display:none;
}
.header-icons-cart-button .custom-header-icon{
  padding: 15px;
}
.header-logo-img{
  width:180px;
}
.header-icons-cart-button{
   display:flex !important;
   align-items: center !important;
  gap:25px;
}
.icons-nav-section{
  display: flex;
    flex-direction: row;
    align-items: center;
}
.header-main-div .icons-nav-section{
  width: 73%;
  justify-content: right;
}
.header-nav-lists .list-nav-link:hover span{
  text-decoration: none !important;
  font-family: 'Bold_Font';
}
.list-nav-link .header-nav-span-items{
  position: relative;
}
.list-nav-link .header-nav-span-items:hover::after{
  content: ''; 
  position: absolute;
  bottom: -5px; 
  left: 50%; 
  transform: translateX(-50%); 
  width: 5px;
  height: 5px;

  border-radius: 50%; 
  transition: opacity 0.3s ease-in-out;
}

  @media screen and (max-width:1280px){
    .logo-heading-header{
      max-width: 26%;
      width: 100%;
    }
    .header-main-div .icons-nav-section {
      width: 66%;
    }
  }

@media screen and (max-width:1024px){
  .header-nav-list-items, .header-nav-span-items {
    font-size: 12px !important;
  }
}
@media screen and (max-width:980px){
  .header-nav-list-items, .header-nav-span-items {
    font-size: 14px !important;
  }
 .header-main-div .icons-nav-section{
    width: unset;
  }
 .mobile-shop-btn {
    display: block;
  }
  .desktop-shop-btn {
    display: none;
  }
  .header-icons-cart-button{
    position: relative;
    left: 100%;
    margin-left: 40%;
  }
  header-drawer
  {
    display: flex !important;
  }
  .header-main-div
  {
    padding-top: 0  !important;
    padding-bottom: 0  !important;
  }
  .logo-heading-header{
    position: relative;
    left: 16%;
    margin-left: 20%;
  }
  .shop-now-menu {
    min-width: 78%;
    width: 100%;
  }
}
@media screen and (max-width:767px){
  .drawer-custom-mob{
    display:flex !important;
  }
  .header-icons-cart-button {
    gap: 27px;
  }
  .shop-now-menu {
    min-width: 45%;
    width: 100%;
    height: 42px;
    font-weight: 800;
    line-height: 17.44px;
    padding: 13px;
    margin: 5px 0;
  }
  .header-main-div {
    justify-content:space-between;
  }
  .logo-icons-mobile-section{
    display:flex;
    flex-direction:row;
    align-items:center;
    justify-content: right;
    gap:40px;
  }
  .header-logo-img {
    min-width: 118px;
    width:100%;
  }
  .header-icons-cart-button{
    position: relative;
    left: 13%;
    margin-left: 0
  }
  .logo-heading-header{
    position: relative;
    left: 8%;
    margin-left: 0;
  }
}

@media screen and (max-width: 330px){
  .logo-heading-header {
    position: relative;
    left: 2%;
    margin-left: 0;
   }
  .header-logo-img {
    min-width: 95px;
    width: 100%;
  }
}
